<UserControl 
  x:Class="GitKeeper.Main.Views.CloneRepoPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:GitKeeper.Main.Views"
  xmlns:prism="http://prismlibrary.com/"
  mc:Ignorable="d" 
  xmlns:controls="clr-namespace:GitKeeper.Controls;assembly=GitKeeper.Controls"

  d:DesignHeight="300" 
  d:DesignWidth="300">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel
      Grid.Row="0">
      <TextBlock
        FontSize="42"
        Margin="20"
        Text="リポジトリのクローン" />
      <TextBlock 
        Margin="20"
        Text="リポジトリの場所"/>
      <TextBox 
        Margin="20"
        Text="{Binding RepoUrl.Value}"/>
      <TextBlock 
        Margin="20"
        Text="パス"/>
      <TextBox 
        Margin="20"
        Text="{Binding FolderPath.Value}"/>
    </StackPanel>
    <Grid
      Grid.Row="1">
      <Button Command="{Binding NavigateNext}">Next </Button>

    </Grid>
  </Grid>
</UserControl>


